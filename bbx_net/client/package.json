{
    "name": "@bbx-audio/net",
    "version": "0.4.1",
    "description": "Lightweight WebSocket client for bbx_net audio control",
    "private": false,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/blackboxaudio/bbx_audio.git",
        "directory": "bbx_net/client"
    },
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "main": "src/index.ts",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "yarn clean && yarn build:web",
        "build:web": "tsc && vite build",
        "build:docs": "typedoc --out docs src/index.ts",
        "clean": "rimraf dist",
        "dev": "vite build --watch --mode development",
        "format": "yarn format:fix",
        "format:check": "prettier --check \"**/*.{ts,js,json}\"",
        "format:fix": "prettier --write \"**/*.{ts,js,json}\"",
        "lint": "yarn lint:fix",
        "lint:check": "eslint --cache \"**/*.{ts,js}\"",
        "lint:fix": "eslint --cache --fix \"**/*.{ts,js}\"",
        "prepublishOnly": "yarn build"
    },
    "devDependencies": {
        "@eslint/js": "9.33.0",
        "eslint": "9.33.0",
        "globals": "16.3.0",
        "jiti": "2.5.1",
        "prettier": "3.6.2",
        "rimraf": "6.0.1",
        "typedoc": "0.28.12",
        "typescript": "5.9.2",
        "typescript-eslint": "8.40.0",
        "vite": "7.1.3",
        "vite-plugin-dts": "4.5.4",
        "vite-tsconfig-paths": "5.1.4"
    }
}
